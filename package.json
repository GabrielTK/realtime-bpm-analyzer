{
  "name": "realtime-bpm-analyzer",
  "version": "1.1.5",
  "description": "Tool to analyze BPM / Tempo in realtime",
  "author": {
    "name": "David Lepaux",
    "email": "d.lepaux@gmail.com",
    "url": "https://github.com/dlepaux"
  },
  "keywords": [
    "webaudioapi",
    "audiobuffer",
    "audio",
    "realtime",
    "tempo",
    "bpm",
    "beats",
    "minutes",
    "analyzer"
  ],
  "type": "module",
  "license": "MIT",
  "main": "./src/index.js",
  "scripts": {
    "coverage": "codecov",
    "debug": "set LOGGY_STACKS=true && brunch w",
    "postinstall": "npx husky install",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "test": "NODE_ENV=test mocha",
    "test:report": "c8 --reporter=html --reporter=text --reporter=lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlepaux/realtime-bpm-analyzer"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "chai": "^4.3.4",
    "codecov": "^3.8.3",
    "husky": "^7.0.2",
    "mocha": "^8.3.2",
    "c8": "^7.7.1",
    "standard-version": "^9.3.1",
    "wav-decoder": "^1.3.0",
    "web-audio-engine": "^0.13.4",
    "xo": "^0.45.0"
  },
  "xo": {
    "space": 2,
    "semicolon": true,
    "globals": [
      "process",
      "document",
      "navigator",
      "window"
    ],
    "rules": {
      "unicorn/no-array-reduce": "off"
    }
  },
  "lint-staged": {
    "**/*": "xo --fix"
  }
}
