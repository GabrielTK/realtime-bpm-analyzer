{
  "name": "realtime-bpm-analyzer",
  "version": "2.1.2",
  "description": "This dependency free library can analyze the BPM (Tempo) of an audio/video node or any stream in realtime on your browser",
  "author": {
    "name": "David Lepaux",
    "email": "d.lepaux@gmail.com",
    "url": "https://github.com/dlepaux"
  },
  "keywords": [
    "webaudioapi",
    "audiobuffer",
    "audio",
    "stream",
    "microphone",
    "realtime",
    "no-dependency",
    "tempo",
    "bpm",
    "beats",
    "analyzer"
  ],
  "license": "MIT",
  "main": "./dist/realtime-bpm-analyzer.js",
  "scripts": {
    "dev": "next dev",
    "build": "npm run doc && next build",
    "start": "next start",
    "lint": "next lint",
    "esbuild": "esbuild lib/realtime-bpm-analyzer.js --bundle --platform=node --sourcemap --target=node10 --outfile=dist/realtime-bpm-analyzer.js",
    "serve": "npm run doc && vue-cli-service serve",
    "coverage": "codecov",
    "doc": "rm -Rf ./jsdoc && jsdoc -c ./.jsdoc.json ./readme.md",
    "postinstall": "npx husky install",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "test": "NODE_ENV=test mocha",
    "test:report": "c8 --reporter=html --reporter=text --reporter=lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlepaux/realtime-bpm-analyzer"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.6.0",
    "c8": "^7.7.1",
    "chai": "^4.3.4",
    "clean-jsdoc-theme": "^3.2.8",
    "codecov": "^3.8.3",
    "esbuild": "^0.13.14",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "highlight.js": "^11.3.0",
    "husky": "^7.0.2",
    "jsdoc": "^3.6.7",
    "mocha": "^8.3.2",
    "next": "^12.0.4",
    "raf": "^3.4.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.2",
    "react-dom": "^17.0.2",
    "react-highlight": "^0.14.0",
    "sass": "^1.43.4",
    "standard-version": "^9.3.1",
    "wav-decoder": "^1.3.0",
    "web-audio-engine": "^0.13.4",
    "xo": "^0.45.0"
  },
  "xo": {
    "extends": "xo-react",
    "space": 2,
    "semicolon": true,
    "globals": [
      "process",
      "document",
      "navigator",
      "window"
    ],
    "rules": {
      "react/state-in-constructor": [2, "always"],
      "react/prop-types": "off",
      "unicorn/no-array-reduce": "off",
      "node/prefer-global/process": 0,
      "unicorn/numeric-separators-style": "off",
      "import/no-unassigned-import": "off",
      "import/no-anonymous-default-export": "off"
    }
  },
  "lint-staged": {
    "**/*": "xo --fix"
  }
}
