{
  "name": "realtime-bpm-analyzer",
  "version": "3.0.0-3",
  "description": "This dependency free library can analyze the BPM (Tempo) of an audio/video node or any stream in realtime on your browser",
  "author": {
    "name": "David Lepaux",
    "email": "d.lepaux@gmail.com",
    "url": "https://github.com/dlepaux"
  },
  "keywords": [
    "webaudioapi",
    "audiobuffer",
    "audio",
    "stream",
    "microphone",
    "realtime",
    "no-dependency",
    "tempo",
    "bpm",
    "beats",
    "analyzer"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./src/index.ts",
  "scripts": {
    "build": "esbuild src/realtime-bpm-processor.ts --bundle --outfile=dist/realtime-bpm-processor.js && esbuild src/index.ts --bundle --outfile=dist/index.js",
    "build-esm": "esbuild src/index.ts --bundle --platform=node --target=node14 --outfile=dist/index.esm.js",
    "coverage": "codecov",
    "doc": "rm -Rf ./public/api && jsdoc -c ./.jsdoc.json ./readme.md",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "test": "NODE_ENV=test ts-mocha -p tsconfig.json test/**/*.ts",
    "test:report": "c8 --reporter=html --reporter=text --reporter=lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlepaux/realtime-bpm-analyzer"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@tsconfig/recommended": "^1.0.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "c8": "^7.7.1",
    "chai": "^4.3.4",
    "clean-jsdoc-theme": "^3.2.8",
    "esbuild": "^0.14.21",
    "husky": "^7.0.2",
    "jsdoc": "^3.6.10",
    "mocha": "^9.2.0",
    "standard-version": "^9.3.1",
    "ts-mocha": "^9.0.2",
    "typedoc": "^0.22.11",
    "typescript": "^4.7.4",
    "wav-decoder": "^1.3.0",
    "web-audio-engine": "^0.13.4",
    "xo": "^0.53.1"
  },
  "xo": {
    "space": 2,
    "semicolon": true,
    "globals": [
      "process",
      "document",
      "navigator",
      "window"
    ],
    "rules": {
      "unicorn/no-array-reduce": "off",
      "node/prefer-global/process": 0,
      "unicorn/numeric-separators-style": "off",
      "import/no-unassigned-import": "off",
      "import/no-anonymous-default-export": "off"
    }
  },
  "lint-staged": {
    "**/*": "xo --fix"
  },
  "dependencies": {
    "@types/audioworklet": "0.0.35"
  }
}
